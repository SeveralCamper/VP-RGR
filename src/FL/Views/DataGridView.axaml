<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450">
	<Grid RowDefinitions="*,*">
		<DataGrid Grid.Row="0" Name="MyDataGrid1" Items="{Binding Items}" AutoGenerateColumns="True" ></DataGrid>
		<DataGrid Grid.Row="1" Name="MyDataGrid2" Items="{Binding Items}" AutoGenerateColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn Binding="{Binding Name}">
					<DataGridTextColumn.Header>
						<CheckBox IsChecked="True" Content="First Column"/>
					</DataGridTextColumn.Header>
				</DataGridTextColumn>
				<DataGridTextColumn Header="Second Column" Binding="{Binding Abbreviation}"/>
				<DataGridTextColumn Header="Third Column" Binding="{Binding Capital}"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>

